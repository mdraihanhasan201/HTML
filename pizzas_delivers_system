print(" welcome to pizza_hut!")
size=input("what size of pizza you want? s or m or l\n")
add_pepperoni=input("you want to add pepperoni? y or n \n")
add_chesse=input("did you want to add some chesse? y or n\n")
bill=0
if size=="s":
bill=5
elif size=="m":
bill=8
else:
bill=10
if add_pepperoni=="y":
if size=="s":
bill=bill+2
elif size=="m":
bill=bill+2
else:
bill=bill+2

if add_chesse=="y":
if size=="s":
bill=bill+3

elif size=="m":
bill=bill+3
else:
bill=bill+3

print(f"your final bill\n{bill}$")
